<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Icontts"
    android:background="@color/orange">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/orange"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/mainiconimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ImageView>

        <TextView
            android:id="@+id/Deskripsipericon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/texttospeach"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Label"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/texttospeach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainiconimage"
            android:layout_marginHorizontal="15dp"
            android:text="Text to speach" />

        <Button
            android:id="@+id/backtomenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Deskripsipericon"
            android:layout_marginHorizontal="15dp"
            android:text="back" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>