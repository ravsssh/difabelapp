<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Icontts"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2E324B"
        android:orientation="vertical"

        android:gravity="center"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainiconimage">
        </ImageView>
        <Button
            android:layout_below="@+id/mainiconimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Text to speach"
            android:id="@+id/texttospeach"/>


        <TextView
            android:id="@+id/Deskripsipericon"
            android:layout_below="@+id/texttospeach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="30dp"
            android:gravity="bottom"
            android:text="Label"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
        <Button
            android:layout_below="@+id/Deskripsipericon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="back"
            android:id="@+id/backtomenu"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>